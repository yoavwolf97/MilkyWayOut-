---
interface Props {
  defaultBudget?: number;
  defaultDuration?: number;
}

const { defaultBudget = 1000, defaultDuration = 7 } = Astro.props;
---

<form class="budget-form">
  <div class="input-group">
    <label for="budget">Total Budget (USD)</label>
    <input 
      type="number" 
      id="budget" 
      name="budget" 
      min="100" 
      value={defaultBudget} 
      required 
    />
  </div>
  
  <div class="input-group">
    <label for="duration">Duration (days)</label>
    <input 
      type="number" 
      id="duration" 
      name="duration" 
      min="1" 
      value={defaultDuration} 
      required 
    />
  </div>
  
  <button type="submit" class="calculate-btn">Find Destinations</button>
</form>

<style>
  .budget-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-weight: 500;
    color: var(--text);
  }

  input {
    padding: 0.75rem;
    border: 2px solid #e2e8f0;
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  input:focus {
    outline: none;
    border-color: var(--primary);
  }

  .calculate-btn {
    padding: 1rem;
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .calculate-btn:hover {
    background: var(--primary-dark);
  }
</style>
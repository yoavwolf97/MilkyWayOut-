---
import { Image } from 'astro:assets';
import logo from '/public/half_logo.jpg';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<a href="/" class={`logo ${className}`}>
  <Image 
    src={logo}
    alt="MilkyWayOut - A Travel Blog"
    width={250}
    height={100}
    class="logo-image"
  />
</a>

<style>
  .logo {
    display: inline-block;
    padding: 12px 20px;
    text-decoration: none;
  }

  .logo-image {
    width: 250px;
    height: 100px;
    object-fit: contain;
  }

  @media (max-width: 640px) {
    .logo {
      padding: 8px 12px;
    }
    
    .logo-image {
      width: 140px;
      height: 56px;
    }
  }
</style>
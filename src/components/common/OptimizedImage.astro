---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  class?: string;
}

const { src, alt, width, height, class: className = '' } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading="eager"
  class={className}
/>
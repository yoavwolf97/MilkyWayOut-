---
import Layout from '../layouts/Layout.astro';
import Calculator from '../components/calculator/Calculator.astro';
---

<Layout title="Travel Budget Calculator">
  <div class="calculator-page">
    <div class="container">
      <header class="page-header">
        <h1>Travel Budget Calculator</h1>
        <p class="description">Find destinations that match your budget</p>
      </header>

      <Calculator />
    </div>
  </div>
</Layout>

<style>
  .calculator-page {
    padding: 2rem 1rem;
    min-height: calc(100vh - 4.5rem);
    background: var(--background);
    margin-top: 70px; /* Added to account for fixed navigation */
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--primary);
    margin-bottom: 0.75rem;
  }

  .description {
    color: var(--text-light);
    font-size: 1.1rem;
  }

  @media (max-width: 640px) {
    .calculator-page {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }
  }
</style>